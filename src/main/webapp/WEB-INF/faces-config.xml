<!-- faces-config.xml -->
<faces-config xmlns="http://java.sun.com/xml/ns/javaee" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd" 
version="2.1">

	<application>
		<message-bundle>us.co.state.sos.messages</message-bundle>
		<resource-bundle>
			<base-name>us.co.state.sos.messages</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>
	
	<managed-bean>
		<managed-bean-name>currentDateTime</managed-bean-name>
		<managed-bean-class>org.joda.time.DateTime</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<navigation-rule>
		<from-view-id>/licenserequest/create.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{licenseRequestService.create(licenseRequest)}</from-action>
			<from-outcome>Success</from-outcome>
			<redirect>true</redirect>
			<to-view-id>/licenserequest/view.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>